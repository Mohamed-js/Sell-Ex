<h1 class="text-center mb-3">
    Sales  
</h1>
<p id="notice" class="text-center"><%= notice %></p>
<br>
<div class="max-width row">
<div  class="col-lg-3 col-md-4 p-0 flex-row align-center justify-center"><%= button_to 'رجوع ##### الرئيسية', root_path, class:"btn btn-secondary mb-4", method: "get" %></div>
  <div  class="col-lg-9 col-md-8 row py-1 rounded p-0">
    <div  class="col-5 text-center p-1  white rounded mr-2 white bg-gradient-tertiary flex-col align-center justify-center">
      <p class="m-0">Cash</p>
      <h2>$<%= Store.first.dorg %></h2>
    </div>
    <% if current_user.admin %>
      <div  class="col-5 text-center p-1 bg-gradient-secondary white rounded mr-2 white">
        <p class="m-0">Products Capital</p>
        # <h4><%= @products_value %> ج.م</h4> مقدار الزكاة <h4><%= @products_value/40 %> ج.م</h4>
      </div>
    <% end %>
  </div>
  
</div>
<div class="row m-1 max-width m-auto">
  <div  class="col-lg-3 col-md-4 p-0 flex-row align-center justify-center">
    <%= button_to 'Sell +', '/sell', class:"btn bg-gradient-tertiary white mx-1 py-2 mb-2", method: "get" %>
  </div>
  <% if current_user.admin %>
  <div  class="col-lg-9 col-md-8 row py-1 rounded p-0">
    <div  class="col-5 text-center p-1 bg-gradient white rounded mr-2 white">
      <p class="m-0"> Month Sales </p>
      <h4><%= @month_sales %> ج.م</h4>
    </div>
   
    <div  class="col-5 text-center p-1 bg-gradient white rounded white"> 
      <p class="m-0">  Month Profits </p>
      <h4>$<%= @month_profit %> </h4>
   </div>
  </div>
  <div class="col-lg-3 col-md-4 p-0"></div>
  <div class="col-lg-9 col-md-8 row py-1 rounded p-0">
    <div class="col-5 text-center p-1 bg-gradient white rounded mr-2 white">
      <p class="m-0">  Total  </p>
      <h4>$<%= @total_sales %></h4>
    </div>
    
    <div class="col-5 text-center p-1 bg-gradient white rounded white">
      <p class="m-0">Total Profits </p>
      <h4>$<%= @total_profit %></h4>
    </div>
  </div>
  <% end %>
</div>

<br>

<table class="table table-bordered table-sm table-striped max-width">
  <thead class="thead-dark">
    <tr>
      <th scope="col" small='true'>Bill</th>
      <th scope="col">Name</th>
      <th scope="col" small='true'>Quantity</th>
      <th scope="col">Selling Price</th>
      <th scope="col">After Discount</th>
      <th scope="col">Seller</th>
      <th scope="col">Selling Date</th>
      <% if current_user.admin %>
        <th colspan="2">Controls</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr scope="row">
        <td><%= button_to sale.bill.id , bill_path(sale.bill.id), method: "get", class:"btn blue-link" %> </td>
        <% if sale.product %>
          <td><%= button_to sale.name , product_path(sale.product.id), method: "get", class:"btn blue-link" %></td>
        <% else %>
          <td><%= sale.name %></td>
        <% end %>
        <td><%= sale.quantity %></td>
        <td>$<%= sale.selling_price %>  <%= " - " + sale.sale_type if sale.sale_type %> </td>
        <td>$<%= sale.quantity * sale.selling_price - sale.discount %> </td>
        <% if sale.bill.seller %>
          <td><%= sale.bill.seller %></td>
          <% else %>
          <td><%= sale.seller %></td>
        <% end %>
        <td><%= sale.created_at.strftime('%F || %I:%M || %p') %></td>
        <% if current_user.admin %>
          <td><%= button_to 'Edit', edit_sale_path(sale), class:"btn bg-gradient-secondary white p-1", method: "get" %></td>
          <td><%= button_to 'Return', sale, method: :delete, data: { confirm: 'Are you sure..?' } , class:"btn bg-gradient-danger white p-1" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="row m-1 max-width m-auto">
  <div  class="col-lg-3 col-md-4 p-0">
    <a href="/sales/all">Display All</a>
  </div>
</div>

<br>