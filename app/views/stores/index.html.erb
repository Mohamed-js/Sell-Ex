<h1 class="text-center mb-3">My Stores</h1>

<br />
<% @stores.each do |store| %>
  <div class="row align-items-center mb-2">
    <% if store.image.attached? %>
      <%= image_tag store.image, :crop=>"fill", class: "rounded col-2" %>
    <% end %>
    <h4 class="col-2 white"><%= store.name %></h4>
    <div class="col-2">
      <a class="btn bg-gradient white" href='/stores/<%= store.id %>/activate'>
        Set as Active
      </a>
    </div>
    <div class="col-2">
      <a class="btn bg-gradient white" href='/stores/<%= store.id %>' target="_blank">
        Open
      </a>
    </div>
    <div class="col-2">
      <a class="btn bg-gradient-secondary white" href='/stores/<%= store.id %>/edit' >
        Edit
      </a>
    </div>
    <div class="col-2">
      <%= button_to 'Delete', store, method: :delete, data: { confirm: 'You will lose everything related to this store, sure..?' }, class:"btn bg-gradient-danger white" %>
    </div>
  </div>
<% end %>
